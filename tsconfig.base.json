{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@devover/source"],
    "baseUrl": ".",
    "paths": {
      "@common/ui/components/*": ["libs/shared/ui/components/src/lib/*"],
      "@common/ui/layouts/*": ["libs/shared/ui/layouts/src/lib/*"],
      "@common/ui/theme/*": ["libs/shared/ui/theme/src/lib/*"],
      "@common/utils/*": ["libs/shared/utils/src/lib/*"],
      "@common/types/*": ["libs/shared/types/src/lib/*"],
      "@common/constants/*": ["libs/shared/constants/src/lib/*"]
    }
  }
}
